rule mark_duplicates:
    input:
        "mapped/{sample}.bam"
    output:
        bam="dedup/{sample}.bam",
        metrics="dedup/{sample}.metrics.txt"
    log:
        "logs/picard/dedup/{sample}.log"
    params:
        java_options="-Xmx8g",
        extra="REMOVE_DUPLICATES=true"
    wrapper:
        "master/bio/picard/markduplicates"
